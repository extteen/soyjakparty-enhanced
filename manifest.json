{
  "manifest_version": 3,
  "name": "Soyjak Party Enhanced",
  "version": "3.0.0",
  "description": "Enhances the Soyjak.Party experience or something",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://soybooru.com/*",
    "*://*.soyjak.st/*",
    "*://*.soyjak.party/*",
    "*://soyjakwiki.org/*"
  ],
  "action": {
    "default_icon": {
      "48": "icons/sharty-48.png",
      "96": "icons/sharty-96.png"
    }
  },
  "icons": {
    "48": "icons/sharty-48.png",
    "96": "icons/sharty-96.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "audio/*",
	"gcpdot.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.soyjak.party/*",
        "*://*.soyjak.st/*",
        "*://soybooru.com/*",
        "*://soyjakwiki.org/*"
      ],
      "js": [
        "browser-polyfill.min.js",
        "main-functions.js",
        "text-post-formatting.js",
        "main-page-tweaks.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "102.0"
    }
  }
}
